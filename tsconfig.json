{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": false, // Disable strict mode
    "noImplicitAny": false, // Allow implicit any
    "strictNullChecks": false, // Disable null checks
    "skipLibCheck": true, // Skip library type checking
    "noEmit": false, // Set to true if you only want to check syntax
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
